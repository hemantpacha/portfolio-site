---
import Layout from "../layouts/Layout.astro";
const email = "hemantpacha@gmail.com";
---
<Layout title="Hemant Pacha — Portfolio">
  <!-- Container only; assume Layout provides <main> to avoid double-main issues -->
  <div class="container">
    <!-- Terminal window -->
    <div class="terminal-window" aria-label="Intro terminal animation">
      <div class="terminal-header">
        <div class="terminal-buttons" aria-hidden="true">
          <span class="btn btn-close"></span>
          <span class="btn btn-min"></span>
          <span class="btn btn-max"></span>
        </div>
        <span class="terminal-title" aria-hidden="true">hemant@portfolio:~$</span>
      </div>
      <div class="terminal-body" role="log" aria-live="polite">
        <div class="terminal-line">
          <span class="prompt">root@portfolio:~#</span>
          <span class="cursor" aria-hidden="true">█</span>
        </div>
        <div class="terminal-line delay-1">
          <span class="matrix-text">$ whoami</span>
        </div>
        <div class="terminal-line delay-2">
          <span class="matrix-text">hemant_pacha</span>
        </div>
        <div class="terminal-line delay-3">
          <span class="matrix-text">$ cat profile.txt</span>
        </div>
        <div class="terminal-line delay-4">
          <span class="matrix-text">[CS_STUDENT] [WEB_DEV] [AI_ML]</span>
        </div>
      </div>
    </div>

    <!-- Hero section -->
    <section class="hero" aria-labelledby="home-title">
      <div class="hero-content">
        <h1 id="home-title" class="title">HEMANT_PACHA</h1>
        <p class="lead"><span class="code-text">CS @ UTD_</span> | <span class="code-text">WEB_DEV</span> | <span class="code-text">AI/ML_EXPLORER</span></p>
        <div class="cta-group">
          <a class="cta primary" href="/projects" aria-label="View projects">LOAD_PROJECTS →</a>
          <a class="cta secondary" href={`mailto:${email}`} aria-label="Email Hemant">ESTABLISH_CONTACT</a>
        </div>
      </div>
    </section>

    <!-- Contact / social -->
    <section class="contact" aria-labelledby="contact-title">
      <div class="contact-links">
        <div id="contact-title" class="contact-header">[NETWORK_ACCESS]</div>
        <a href={`mailto:${email}`} class="contact-link" aria-label="Email">
          <span class="icon">&gt;_</span>
          <span>{email}</span>
        </a>
        <a href="Hemant Pacha_Software Developer Intern_20251201.pdf" class="contact-link" target="_blank" rel="noopener noreferrer" aria-label="Download resume">
          <span class="icon">&gt;_</span>
          <span>DOWNLOAD_RESUME</span>
        </a>
        <div class="social-links">
          <a href="https://github.com/hemantpacha" class="social-link" target="_blank" rel="noopener noreferrer" aria-label="GitHub – hemantpacha">
